#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |  ECS |  ~  |  1  |  2  |  3  |  4  |  5  |  6  |        7  |  8  |  9  |  0  |  -  |  +  | BSPC | 
// | PG_UP| TAB |  Q  |  W  |  E  |  R  |  T  |     |  Y  |  U  |  I  |  O  |  P  |  [  |  ]  |   \  |
// | PG_DW| CAP |  A  |  S  |  D  |  F  |  G  |     |  H  |  I  |  J  |  K  |  L  |  ;  |  '  | ENTR |
// |      | SHFT|  Z  |  X  |  C  |  V  |  B  |     |  B  |  N  |  M  |  ,  |  .  |  /  |  UP | SHFT | 
//        | CTRL| WIN |     |     | ALT |SPACE|     |SPACE|  FN |     |     |     | LEFT| DOWN|RIGHT |      
                        display-name = "Base";
                        bindings = <
   &kp ESC   &kp GRAVE  &kp N1          &kp N2  &kp N3  &kp N4   &kp N5         &kp N6  &trans           &kp N7  &kp N8  &kp N9          &kp N0  &kp MINUS       &kp EQUAL       &kp BSPC 
   &kp PG_UP &kp TAB    &kp Q           &kp W   &kp E   &kp R    &kp T          &trans   &kp Y           &kp U   &kp I   &kp O           &kp P   &kp LBKT        &kp RBKT        &kp BSLH
   &kp PG_DN &kp CAPS   &kp A           &kp S   &kp D   &kp F    &kp G          &trans   &kp H           &kp I   &kp J   &kp K           &kp L   &kp SEMI        &kp SQT         &kp ENTER
   &trans     &kp LSHFT  &kp Z           &kp X   &kp C   &kp V    &kp B          &trans   &kp B           &kp N   &kp M   &kp COMMA       &kp DOT &kp SLASH       &kp UP          &kp RSHFT
   &trans     &kp LCTRL  &kp LGUI        &trans   &trans   &kp LALT &kp SPACE      &trans   &kp SPACE       &mo 1   &trans   &trans           &trans   &kp LEFT        &kp DOWN        &kp RIGHT
                        >;
                };
                lower_layer {
                        bindings = <
        /* Row 0 – Symbols / Numbers */
        &kp ESC   &kp TILDE &kp EXCL &kp AT   &kp HASH &kp DLLR &kp PRCNT &kp CARET
        &kp AMPS  &kp STAR  &kp LPAR &kp RPAR &kp UNDER &kp PLUS &kp DEL  &trans

        /* Row 1 – Brackets / Math */
        &kp HOME  &trans     &kp LBRC &kp RBRC &kp LCBR &kp RCBR &kp PIPE  &trans
        &kp EQUAL &kp MINUS &kp LT   &kp GT   &kp COLON &kp SEMI &kp BSLH &kp GRAVE

        /* Row 2 – Navigation */
        &kp END   &trans     &kp LEFT &kp DOWN &kp UP   &kp RIGHT &kp PG_UP &trans
        &kp PG_DN &kp HOME  &kp END  &trans &trans &trans &trans &kp ENTER

        /* Row 3 – Media */
        &trans     &kp LSHFT &kp MUTE &kp VOLD &kp VOLU &kp MPLY &kp MNXT &trans
        &kp MPRV  &trans &trans &trans &trans &trans &kp PG_UP &kp RSHFT

        /* Row 4 – System */
        &trans     &kp LCTRL &kp LGUI &trans &trans &kp LALT &kp TAB &bt BT_CLR
        &kp SPACE &trans   &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4 &kp RIGHT
                        >;
                };

                raise_layer {
                        bindings =<>;
                };

        
};
